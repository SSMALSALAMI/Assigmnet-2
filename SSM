from ebook import EBook
from customer import Customer
from shopping_cart import ShoppingCart
from order import Order
from invoice import Invoice

def test_all_features():
    # Create some e-books
    book1 = EBook("Python Basics", "Author A", "2023-01-01", "Programming", 15.0)
    book2 = EBook("Advanced Python", "Author B", "2023-02-01", "Programming", 25.0)
    
    # Create a customer
    customer = Customer("John Doe", "john@example.com", loyalty_member=True)
    
    # Create a shopping cart and add items
    cart = ShoppingCart()
    cart.add_to_cart(book1, 3)
    cart.add_to_cart(book2, 3)
    
    # Display cart contents
    print("Cart Contents:", cart.display_cart())
    
    # Create an order and apply discounts
    order = Order(customer, cart, "2024-11-04")
    order.apply_discount()
    
    # Generate an invoice
    invoice = Invoice(order)
    print(invoice.generate_invoice())

if __name__ == "__main__":
    test_all_features()
